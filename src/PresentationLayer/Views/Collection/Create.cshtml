@using BLL.Dto
@using DAL.Entities
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager
@model CollectionDto

<form method="post" enctype="multipart/form-data">
    @{
        var user = await UserManager.FindByNameAsync(User.Identity?.Name);
        <input hidden value="@user.Id" name="AppUserId" />
    }
    <div class="border p-3 bg-white">
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CollectionType"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="CollectionType" asp-items="Html.GetEnumSelectList<CollectionTypes>()" class="form-select">
                            <option disabled selected>-- collection type --</option>
                        </select>
                        <span asp-validation-for="CollectionType" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        Image
                    </div>
                    <div class="col-8">
                        <input type="file" name="FormFile" multiple class="form-control" />
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <button type="submit" formaction="@Url.Action("Create")" class="btn btn-success" data-bs-toggle="tooltip" title="Create new collection">
                            Create new collection
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
